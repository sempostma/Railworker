<Page x:Class="Railworker.Pages.CompositionEditor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Railworker.Pages"
      xmlns:lang="clr-namespace:Railworker.Language;assembly=Railworker.Language"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1000"
      Title="CompositionEditor">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top toolbar -->
        <ToolBar Grid.Row="0">
            <Button x:Name="OpenFileButton" Content="Open Composition File" Click="OpenFileButton_Click" Margin="5"/>
            <Button x:Name="SaveFileButton" Content="Save Composition File" Click="SaveFileButton_Click" Margin="5"/>
            <Separator/>
            <Button x:Name="PreviewButton" Content="Preview Composition" Click="PreviewButton_Click" Margin="5"/>
            <Separator/>
            <Button x:Name="AddTexturesButton" Content="Add Textures" Click="AddTexturesButton_Click" Margin="5"/>
            <Separator/>
            <Button x:Name="ExportButton" Content="Export JSON" Click="ExportButton_Click" Margin="5"/>
        </ToolBar>

        <!-- Main content area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left panel - Composition properties -->
            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="10">
                    <GroupBox Header="Composition Properties" Margin="0,0,0,10">
                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="ID:" VerticalAlignment="Center" Margin="0,5"/>
                            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Id}" Margin="5"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Name:" VerticalAlignment="Center" Margin="0,5"/>
                            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Name}" Margin="5"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Base Path:" VerticalAlignment="Center" Margin="0,5"/>
                            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding BasePath}" Margin="5"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Full Skins Amount:" VerticalAlignment="Center" Margin="0,5"/>
                            <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding FullSkinsAmount}" Margin="5"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Composed Width:" VerticalAlignment="Center" Margin="0,5"/>
                            <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding ComposedImageWidth}" Margin="5"/>

                            <TextBlock Grid.Row="5" Grid.Column="0" Text="Composed Height:" VerticalAlignment="Center" Margin="0,5"/>
                            <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding ComposedImageHeight}" Margin="5"/>

                            <TextBlock Grid.Row="6" Grid.Column="0" Text="Input Resize Width:" VerticalAlignment="Center" Margin="0,5"/>
                            <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding InputImageResizeWidth}" Margin="5"/>

                            <TextBlock Grid.Row="7" Grid.Column="0" Text="Input Resize Height:" VerticalAlignment="Center" Margin="0,5"/>
                            <TextBox Grid.Row="7" Grid.Column="1" Text="{Binding InputImageResizeHeight}" Margin="5"/>

                            <TextBlock Grid.Row="8" Grid.Column="0" Text="Stylus X Interval:" VerticalAlignment="Center" Margin="0,5"/>
                            <TextBox Grid.Row="8" Grid.Column="1" Text="{Binding StylusXInterval}" Margin="5"/>

                            <TextBlock Grid.Row="9" Grid.Column="0" Text="Stylus Y Interval:" VerticalAlignment="Center" Margin="0,5"/>
                            <TextBox Grid.Row="9" Grid.Column="1" Text="{Binding StylusYInterval}" Margin="5"/>

                            <TextBlock Grid.Row="10" Grid.Column="0" Text="Columns:" VerticalAlignment="Center" Margin="0,5"/>
                            <TextBox Grid.Row="10" Grid.Column="1" Text="{Binding ComposedImageColumns}" Margin="5"/>

                            <TextBlock Grid.Row="11" Grid.Column="0" Text="Rows:" VerticalAlignment="Center" Margin="0,5"/>
                            <TextBox Grid.Row="11" Grid.Column="1" Text="{Binding ComposedImageRows}" Margin="5"/>

                            <TextBlock Grid.Row="12" Grid.Column="0" Text="Output Scale X:" VerticalAlignment="Center" Margin="0,5"/>
                            <TextBox Grid.Row="12" Grid.Column="1" Text="{Binding OutputScaleX}" Margin="5"/>

                            <TextBlock Grid.Row="13" Grid.Column="0" Text="Output Scale Y:" VerticalAlignment="Center" Margin="0,5"/>
                            <TextBox Grid.Row="13" Grid.Column="1" Text="{Binding OutputScaleY}" Margin="5"/>
                        </Grid>
                    </GroupBox>

                    <GroupBox Header="Projections" Margin="0,0,0,10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
                                <Button x:Name="AddProjectionButton" Content="Add Projection" Click="AddProjectionButton_Click" Margin="0,0,5,0"/>
                                <Button x:Name="RemoveProjectionButton" Content="Remove Projection" Click="RemoveProjectionButton_Click"/>
                            </StackPanel>

                            <ListView Grid.Row="1" x:Name="ProjectionsListView" ItemsSource="{Binding Projections}" 
                                      SelectionChanged="ProjectionsListView_SelectionChanged" Margin="5" Height="150">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="100"/>
                                        <GridViewColumn Header="Source X" DisplayMemberBinding="{Binding SourceBbox.X}" Width="60"/>
                                        <GridViewColumn Header="Source Y" DisplayMemberBinding="{Binding SourceBbox.Y}" Width="60"/>
                                        <GridViewColumn Header="Dest X" DisplayMemberBinding="{Binding DestBbox.X}" Width="60"/>
                                        <GridViewColumn Header="Dest Y" DisplayMemberBinding="{Binding DestBbox.Y}" Width="60"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </Grid>
                    </GroupBox>

                    <GroupBox Header="Selected Projection" x:Name="ProjectionDetailsGroup" Visibility="Collapsed" Margin="0,0,0,10">
                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Name:" VerticalAlignment="Center" Margin="0,5"/>
                            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding SelectedProjection.Name}" Margin="5"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Source X:" VerticalAlignment="Center" Margin="0,5"/>
                            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding SelectedProjection.SourceBbox.X}" Margin="5"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Source Y:" VerticalAlignment="Center" Margin="0,5"/>
                            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding SelectedProjection.SourceBbox.Y}" Margin="5"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Source Width:" VerticalAlignment="Center" Margin="0,5"/>
                            <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding SelectedProjection.SourceBbox.Width}" Margin="5"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Source Height:" VerticalAlignment="Center" Margin="0,5"/>
                            <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding SelectedProjection.SourceBbox.Height}" Margin="5"/>

                            <TextBlock Grid.Row="5" Grid.Column="0" Text="Dest X:" VerticalAlignment="Center" Margin="0,5"/>
                            <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding SelectedProjection.DestBbox.X}" Margin="5"/>

                            <TextBlock Grid.Row="6" Grid.Column="0" Text="Dest Y:" VerticalAlignment="Center" Margin="0,5"/>
                            <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding SelectedProjection.DestBbox.Y}" Margin="5"/>

                            <TextBlock Grid.Row="7" Grid.Column="0" Text="Dest Width:" VerticalAlignment="Center" Margin="0,5"/>
                            <TextBox Grid.Row="7" Grid.Column="1" Text="{Binding SelectedProjection.DestBbox.Width}" Margin="5"/>

                            <TextBlock Grid.Row="8" Grid.Column="0" Text="Dest Height:" VerticalAlignment="Center" Margin="0,5"/>
                            <TextBox Grid.Row="8" Grid.Column="1" Text="{Binding SelectedProjection.DestBbox.Height}" Margin="5"/>

                            <TextBlock Grid.Row="9" Grid.Column="0" Text="Rotation:" VerticalAlignment="Center" Margin="0,5"/>
                            <ComboBox Grid.Row="9" Grid.Column="1" SelectedItem="{Binding SelectedProjection.DestBbox.Rotate}" Margin="5">
                                <ComboBoxItem Content="None"/>
                                <ComboBoxItem Content="Rotate90"/>
                                <ComboBoxItem Content="Rotate180"/>
                                <ComboBoxItem Content="Rotate270"/>
                            </ComboBox>
                        </Grid>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>

            <!-- Right panel - Preview and Test Textures -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="250"/>
                </Grid.ColumnDefinitions>

                <!-- Preview area -->
                <GroupBox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Header="Composition Preview" Margin="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
                            <Button x:Name="ExportPreviewButton" Content="Export Preview" Click="ExportPreviewButton_Click" Margin="0,0,5,0"/>
                            <Button x:Name="ShowMappingButton" Content="Show Mapping" Click="ShowMappingButton_Click" Margin="0,0,5,0"/>
                            <CheckBox x:Name="AddMarginsCheckBox" Content="Add Pixel Margins" IsChecked="True" Margin="10,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1" Margin="5">
                            <Image x:Name="PreviewImage" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </GroupBox>

                <GridSplitter Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Height="5" HorizontalAlignment="Stretch" Background="LightGray"/>

                <!-- Mapping Preview area -->
                <GroupBox Grid.Row="2" Grid.Column="0" Header="Mapping Preview" Margin="10">
                    <Border BorderBrush="Gray" BorderThickness="1">
                        <Image x:Name="MappingPreviewImage" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </GroupBox>
                
                <GridSplitter Grid.Row="2" Grid.Column="1" Width="5" VerticalAlignment="Stretch" Background="LightGray"/>
                
                <!-- Test Textures area -->
                <GroupBox Grid.Row="2" Grid.Column="2" Header="Test Textures" Margin="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <ListView Grid.Row="1" x:Name="TexturesListView" 
                                  SelectionChanged="TexturesListView_SelectionChanged" Margin="5">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Filename" DisplayMemberBinding="{Binding}" Width="200"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </Grid>
                </GroupBox>
            </Grid>
        </Grid>

        <!-- Status bar -->
        <StatusBar Grid.Row="2">
            <TextBlock x:Name="StatusText" Text="Ready"/>
        </StatusBar>
    </Grid>
</Page>
