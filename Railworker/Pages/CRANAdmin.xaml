<Page x:Class="Railworker.Pages.CRANAdmin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Railworker.Pages"
      mc:Ignorable="d" 
      xmlns:Converters="clr-namespace:Railworker.Converters"
      xmlns:lang="clr-namespace:Railworker.Language;assembly=Railworker.Language"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CRAN Admin">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button x:Name="btnAddons" Content="{x:Static lang:Resources.manage_addons}" Margin="10" Width="200" Click="BtnAddons_Click"/>
            <Button x:Name="btnAuthors" Content="{x:Static lang:Resources.manage_authors}" Margin="10" Width="200" Click="BtnAuthors_Click"/>
            <Button x:Name="btnFiles" Content="{x:Static lang:Resources.manage_files}" Margin="10" Width="200" Click="BtnFiles_Click"/>
        </StackPanel>
    </Grid>
</Page>
