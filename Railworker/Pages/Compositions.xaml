<Page x:Class="Railworker.Pages.Compositions"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Railworker.Pages"
      xmlns:lang="clr-namespace:Railworker.Language;assembly=Railworker.Language"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1000"
      Title="Compositions">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top toolbar -->
        <ToolBar Grid.Row="0">
            <Button x:Name="OpenFileButton" Content="Open Compositions File" Click="OpenFileButton_Click" Margin="5"/>
            <Button x:Name="SaveFileButton" Content="Save Compositions File" Click="SaveFileButton_Click" Margin="5"/>
            <Separator/>
            <Button x:Name="AddCompositionButton" Content="Add New Composition" Click="AddCompositionButton_Click" Margin="5"/>
            <Button x:Name="RemoveCompositionButton" Content="Remove Composition" Click="RemoveCompositionButton_Click" Margin="5"/>
        </ToolBar>

        <!-- Main content area -->
        <Grid Grid.Row="1">
            <ListView x:Name="CompositionsListView" ItemsSource="{Binding Compositions}" 
                      SelectionChanged="CompositionsListView_SelectionChanged" Margin="10">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}" Width="150"/>
                        <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="250"/>
                        <GridViewColumn Header="Full Skins Amount" DisplayMemberBinding="{Binding FullSkinsAmount}" Width="120"/>
                        <GridViewColumn Header="Base Path" DisplayMemberBinding="{Binding BasePath}" Width="300"/>
                        <GridViewColumn Header="Projections" DisplayMemberBinding="{Binding Projections.Count}" Width="80"/>
                        <GridViewColumn Header="Actions" Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Edit" Click="EditComposition_Click" Tag="{Binding}" Margin="2"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>

        <!-- Status bar -->
        <StatusBar Grid.Row="2">
            <TextBlock x:Name="StatusText" Text="Ready"/>
        </StatusBar>
    </Grid>
</Page>
