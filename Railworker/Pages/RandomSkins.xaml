<Page x:Class="Railworker.Pages.RandomSkins"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Railworker.Pages"
      xmlns:lang="clr-namespace:Railworker.Language;assembly=Railworker.Language"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1000"
      Title="RandomSkins">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top toolbar -->
        <ToolBar Grid.Row="0">
            <Button x:Name="OpenFileButton" Content="Open RandomSkins File" Click="OpenFileButton_Click" Margin="5"/>
            <Button x:Name="SaveFileButton" Content="Save RandomSkins File" Click="SaveFileButton_Click" Margin="5"/>
            <Separator/>
            <Button x:Name="AddRandomSkinGroupButton" Content="Add New RandomSkin Group" Click="AddRandomSkinGroupButton_Click" Margin="5"/>
            <Button x:Name="RemoveRandomSkinGroupButton" Content="Remove RandomSkin Group" Click="RemoveRandomSkinGroupButton_Click" Margin="5"/>
        </ToolBar>

        <!-- Main content area -->
        <Grid Grid.Row="1">
            <ListView x:Name="RandomSkinGroupsListView" ItemsSource="{Binding RandomSkinGroups}" 
                      SelectionChanged="RandomSkinGroupsListView_SelectionChanged" Margin="10">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}" Width="200"/>
                        <GridViewColumn Header="RandomSkins Count" DisplayMemberBinding="{Binding RandomSkins.Count}" Width="150"/>
                        <GridViewColumn Header="Total Skins" Width="120">
                            <GridViewColumn.DisplayMemberBinding>
                                <Binding>
                                    <Binding.Converter>
                                        <local:TotalSkinsConverter/>
                                    </Binding.Converter>
                                </Binding>
                            </GridViewColumn.DisplayMemberBinding>
                        </GridViewColumn>
                        <GridViewColumn Header="Actions" Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Edit" Click="EditRandomSkinGroup_Click" Tag="{Binding}" Margin="2"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>

        <!-- Status bar -->
        <StatusBar Grid.Row="2">
            <TextBlock x:Name="StatusText" Text="Ready"/>
        </StatusBar>
    </Grid>
</Page>
