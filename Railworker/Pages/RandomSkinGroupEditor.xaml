<Page x:Class="Railworker.Pages.RandomSkinGroupEditor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Railworker.Pages"
      xmlns:lang="clr-namespace:Railworker.Language;assembly=Railworker.Language"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1000"
      Title="RandomSkinGroupEditor">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top toolbar -->
        <ToolBar Grid.Row="0">
            <Button x:Name="SaveButton" Content="Save Changes" Click="SaveButton_Click" Margin="5"/>
            <Separator/>
            <Button x:Name="AddRandomSkinButton" Content="Add RandomSkin" Click="AddRandomSkinButton_Click" Margin="5"/>
            <Button x:Name="RemoveRandomSkinButton" Content="Remove RandomSkin" Click="RemoveRandomSkinButton_Click" Margin="5"/>
        </ToolBar>

        <!-- Main content area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left panel - Group properties -->
            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="10">
                    <GroupBox Header="Group Properties" Margin="0,0,0,10">
                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="ID:" VerticalAlignment="Center" Margin="0,5"/>
                            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Id}" Margin="5"/>
                        </Grid>
                    </GroupBox>

                    <GroupBox Header="RandomSkins" Margin="0,0,0,10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <ListView Grid.Row="0" x:Name="RandomSkinsListView" ItemsSource="{Binding RandomSkins}" 
                                      SelectionChanged="RandomSkinsListView_SelectionChanged" Margin="5" Height="200">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}" Width="120"/>
                                        <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="150"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </Grid>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>

            <!-- Right panel - RandomSkin details -->
            <Grid Grid.Column="1">
                <GroupBox Header="Selected RandomSkin Details" x:Name="RandomSkinDetailsGroup" Visibility="Collapsed" Margin="10">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="5">
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="ID:" VerticalAlignment="Center" Margin="0,5"/>
                                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding SelectedRandomSkin.Id}" Margin="5"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Name:" VerticalAlignment="Center" Margin="0,5"/>
                                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding SelectedRandomSkin.Name}" Margin="5"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Composition:" VerticalAlignment="Center" Margin="0,5"/>
                                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding SelectedRandomSkin.Composition}" Margin="5"/>

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Full Skins Amount:" VerticalAlignment="Center" Margin="0,5"/>
                                <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding SelectedRandomSkin.FullSkinsAmount}" Margin="5"/>

                                <TextBlock Grid.Row="4" Grid.Column="0" Text="Stacked:" VerticalAlignment="Center" Margin="0,5"/>
                                <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding SelectedRandomSkin.Stacked}" Margin="5"/>
                            </Grid>

                            <GroupBox Header="Skin Textures" Margin="0,10,0,0">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
                                        <Button x:Name="AddSkinTextureButton" Content="Add Skin Texture" Click="AddSkinTextureButton_Click" Margin="0,0,5,0"/>
                                        <Button x:Name="RemoveSkinTextureButton" Content="Remove Skin Texture" Click="RemoveSkinTextureButton_Click"/>
                                    </StackPanel>

                                    <ListView Grid.Row="1" x:Name="SkinTexturesListView" ItemsSource="{Binding SelectedRandomSkin.Skins}" 
                                              SelectionChanged="SkinTexturesListView_SelectionChanged" Margin="5" Height="200">
                                        <ListView.View>
                                            <GridView>
                                                <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}" Width="100"/>
                                                <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="150"/>
                                                <GridViewColumn Header="Group" DisplayMemberBinding="{Binding Group}" Width="100"/>
                                                <GridViewColumn Header="Rarity" DisplayMemberBinding="{Binding Rarity}" Width="60"/>
                                                <GridViewColumn Header="Texture" DisplayMemberBinding="{Binding Texture}" Width="200"/>
                                            </GridView>
                                        </ListView.View>
                                    </ListView>
                                </Grid>
                            </GroupBox>

                            <GroupBox Header="Selected Skin Texture Details" x:Name="SkinTextureDetailsGroup" Visibility="Collapsed" Margin="0,10,0,0">
                                <Grid Margin="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="ID:" VerticalAlignment="Center" Margin="0,5"/>
                                    <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding SelectedSkinTexture.Id}" Margin="5"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Name:" VerticalAlignment="Center" Margin="0,5"/>
                                    <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding SelectedSkinTexture.Name}" Margin="5"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Group:" VerticalAlignment="Center" Margin="0,5"/>
                                    <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding SelectedSkinTexture.Group}" Margin="5"/>

                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Rarity:" VerticalAlignment="Center" Margin="0,5"/>
                                    <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding SelectedSkinTexture.Rarity}" Margin="5"/>

                                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Texture:" VerticalAlignment="Center" Margin="0,5"/>
                                    <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding SelectedSkinTexture.Texture}" Margin="5"/>
                                </Grid>
                            </GroupBox>
                        </StackPanel>
                    </ScrollViewer>
                </GroupBox>
            </Grid>
        </Grid>

        <!-- Status bar -->
        <StatusBar Grid.Row="2">
            <TextBlock x:Name="StatusText" Text="Ready"/>
        </StatusBar>
    </Grid>
</Page>
