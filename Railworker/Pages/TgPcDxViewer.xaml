<Page x:Class="Railworker.Pages.TgPcDxViewer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Railworker.Pages"
      xmlns:lang="clr-namespace:Railworker.Language;assembly=Railworker.Language"
      xmlns:props="clr-namespace:Railworker.Properties" 
      xmlns:usercontrols="clr-namespace:Railworker.UserControls" 
      xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
      mc:Ignorable="d"
      xmlns:Converters="clr-namespace:Railworker.Converters" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TgPcDxViewer">

    <Page.Resources>
        <Converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />
        <Converters:MultiplyConverter x:Key="MultiplyConverter" />
        <BooleanToVisibilityConverter x:Key="BoolToVis" />

        <CollectionViewSource Source="{Binding TgPcDxEntries}" x:Key="AvailableBlueprintsSource" Filter="CollectionViewSource_Filter">
            <!--<CollectionViewSource.SortDescriptions>
        <scm:SortDescription PropertyName="XMLElementName"/>
    </CollectionViewSource.SortDescriptions>-->
        </CollectionViewSource>
    </Page.Resources>

    <DockPanel Margin="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50*"></RowDefinition>
                <RowDefinition Height="5"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="5"></RowDefinition>
                <RowDefinition Height="50*"></RowDefinition>
            </Grid.RowDefinitions>

            <usercontrols:FilesTreeView Grid.Row="0" x:Name="FilesTreeView" />

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" x:Name="ScanButton" IsEnabled="{Binding AssetLoadingInProgress, Converter={StaticResource InverseBooleanConverter}}" Content="{x:Static lang:Resources.look_up}" Click="ScanButton_Click" Height="26" Width="114"/>
                <Button Grid.Column="1" x:Name="ClearButton" Visibility="{Binding ClearButtonVisibility}" Content="{x:Static lang:Resources.clear_assets}" Click="AvailableVehiclesClearButton_Click" Height="26" Width="93"/>
                <Button Grid.Column="2" x:Name="ExportButton" Content="Export Selected" Click="ExportButton_Click" Height="26" Width="110" Margin="5,0,0,0" IsEnabled="{Binding HasSelectedItems}"/>
                <StackPanel Grid.Column="3" Orientation="Horizontal" Margin="10,0,0,0">
                    <TextBlock Text="Zoom:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <Slider x:Name="ZoomSlider" Width="100" Minimum="0.5" Maximum="2.0" Value="{Binding ZoomLevel, UpdateSourceTrigger=PropertyChanged}" TickFrequency="0.1" TickPlacement="BottomRight" IsSnapToTickEnabled="True" VerticalAlignment="Center" ValueChanged="ZoomSlider_ValueChanged"/>
                    <TextBlock Text="{Binding ZoomLevel, StringFormat={}{0:F1}x}" VerticalAlignment="Center" Margin="5,0,0,0"/>
                </StackPanel>
                <Button Grid.Column="5" Visibility="{Binding AssetLoadingInProgress, Converter={StaticResource BoolToVis}}" x:Name="CancelScanningButton" Content="{x:Static lang:Resources.cancel}" Height="26" Click="CancelScanningButton_Click" Width="75"/>
            </Grid>
            <Grid Grid.Row="4">
                <!-- Search Row -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Search Controls -->
                <Grid Grid.Row="0" Margin="0,0,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Image x:Name="Search_Icon" Grid.Column="0" Height="20" Width="20" VerticalAlignment="Center">
                        <Image.Source>
                            <BitmapImage UriSource="/Railworker;component/Resources/Search.png" />
                        </Image.Source>
                    </Image>

                    <TextBox x:Name="AvailableBlueprintsSearch" 
                 Grid.Column="1"
                 Text="{x:Static lang:Resources.search}" 
                 TextChanged="TextBox_TextChanged" 
                 BorderThickness="1" 
                 Height="20" 
                 Margin="5,0,0,0"/>
                </Grid>

                <!-- Blueprint List -->
                <ListBox x:Name="AvailableBlueprints" 
             Grid.Row="1"
             ItemsSource="{Binding Source={StaticResource AvailableBlueprintsSource}}"
             VirtualizingStackPanel.IsVirtualizing="True"
             VirtualizingStackPanel.VirtualizationMode="Recycling"
             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
             SelectionMode="Extended"
             SelectionChanged="AvailableBlueprints_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Width="{Binding DataContext.ZoomLevel, RelativeSource={RelativeSource AncestorType={x:Type ListBox}}, Converter={StaticResource MultiplyConverter}, ConverterParameter=120}"
                                 Height="{Binding DataContext.ZoomLevel, RelativeSource={RelativeSource AncestorType={x:Type ListBox}}, Converter={StaticResource MultiplyConverter}, ConverterParameter=130}"
                                 Margin="5">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="{Binding DataContext.ZoomLevel, RelativeSource={RelativeSource AncestorType={x:Type ListBox}}, Converter={StaticResource MultiplyConverter}, ConverterParameter=100}"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Tooltip for the entire item -->
                                <Grid.ToolTip>
                                    <ToolTip>
                                        <TextBlock Text="{Binding Path}" TextWrapping="Wrap"/>
                                    </ToolTip>
                                </Grid.ToolTip>

                                <!-- Image with Loading Overlay -->
                                <Border Grid.Row="0" BorderThickness="1" BorderBrush="#DDDDDD">
                                    <Grid>
                                        <Image Width="{Binding DataContext.ZoomLevel, RelativeSource={RelativeSource AncestorType={x:Type ListBox}}, Converter={StaticResource MultiplyConverter}, ConverterParameter=100}"
                                               Height="{Binding DataContext.ZoomLevel, RelativeSource={RelativeSource AncestorType={x:Type ListBox}}, Converter={StaticResource MultiplyConverter}, ConverterParameter=100}"
                                               Source="{Binding ImageSource}" 
                                               Loaded="Image_Loaded"
                                               Stretch="Uniform" 
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center"/>
                                        <TextBlock Text="Loading..."
                                                  Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>

                                <!-- Name Label -->
                                <TextBlock Grid.Row="1" 
                               Text="{Binding Name}" 
                               TextWrapping="Wrap" 
                               TextAlignment="Center"
                               Margin="0,5,0,0"
                               HorizontalAlignment="Center"/>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" IsItemsHost="True"/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                </ListBox>
            </Grid>
        </Grid>
    </DockPanel>
</Page>
