<Window x:Class="Railworker.Windows.RepaintUpdaterPrompt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Railworker.Windows"
        mc:Ignorable="d"
        xmlns:lang="clr-namespace:Railworker.Language;assembly=Railworker.Language"
        xmlns:converters="clr-namespace:Railworker.Converters" Height="200" Width="300">
    <DockPanel Margin="10">
        <Grid DockPanel.Dock="Bottom" Margin="0 10 0 0">
            <Button Content="{x:Static lang:Resources.keep}" Click="Keep_Click" HorizontalAlignment="Left" Width="135" Height="26" VerticalAlignment="Center"/>
            <Button Content="{x:Static lang:Resources.update}" Click="Update_Click" Margin="10,0,0,0" HorizontalAlignment="Right" Width="135" Height="26" VerticalAlignment="Center"/>
        </Grid>
        <Grid>
            <StackPanel Orientation="Vertical">
                <Label Content="{Binding Question}" />
                <Grid>
                    <Label Content="{x:Static lang:Resources.do_for_all}" />
                    <CheckBox x:Name="DoForAll" HorizontalAlignment="Right" />
                </Grid>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
