<Window x:Class="Railworker.Pages.RandomSkinPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="RandomSkin Preview" Height="600" Width="800"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="{Binding RandomSkinName}" FontSize="16" FontWeight="Bold" Margin="10"/>

        <ScrollViewer Grid.Row="1" Margin="10">
            <StackPanel>
                <TextBlock Text="Preview functionality will be implemented here." FontSize="14" Margin="0,0,0,10"/>
                <TextBlock Text="This will show thumbnails and composition previews similar to RandomContainerGenerator." FontSize="12" Foreground="Gray"/>
            </StackPanel>
        </ScrollViewer>

        <Button Grid.Row="2" Content="Close" Width="75" HorizontalAlignment="Right" Margin="10" Click="CloseButton_Click"/>
    </Grid>
</Window>
